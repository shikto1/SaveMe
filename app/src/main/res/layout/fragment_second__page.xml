<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4caf50"
    tools:context="com.example.shishir.trackme.Fragment.Second_Page">

    <ImageView
        android:src="@drawable/interval"
        android:id="@+id/hhh"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:padding="@dimen/padding"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/largePadding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hhh"
        android:layout_marginBottom="@dimen/smallMargin"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:layout_marginTop="@dimen/padding"
        android:gravity="center"
        android:text="@string/intervalDetails"
        android:textColor="@color/white"
        android:textSize="@dimen/smallTextSize" />

    <LinearLayout
        android:id="@+id/intervalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/padding"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/largMargin"
        android:paddingTop="@dimen/largMargin"
        android:visibility="visible">

        <Button
            android:id="@+id/fiveMin"
            android:layout_width="@dimen/smallButtonSize"
            android:layout_height="@dimen/smallButtonSize"
            android:layout_marginRight="@dimen/smallMargin"
            android:background="@drawable/back_of_interval"
            android:text="5 Min"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/tenMin"
            android:layout_width="@dimen/smallButtonSize"
            android:layout_height="@dimen/smallButtonSize"
            android:layout_marginRight="@dimen/smallMargin"
            android:background="@drawable/back_of_interval"
            android:text="10 Min"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/twentyMin"
            android:layout_width="@dimen/smallButtonSize"
            android:layout_height="@dimen/smallButtonSize"
            android:layout_marginRight="@dimen/smallMargin"
            android:background="@drawable/back_of_interval"
            android:text="20 Min"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/thirtyMin"
            android:layout_width="@dimen/smallButtonSize"
            android:layout_height="@dimen/smallButtonSize"
            android:background="@drawable/back_of_interval"
            android:text="30 Min"
            android:textColor="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/nextAtInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="Next"
        android:textColor="@color/white"
        android:textAppearance="@android:style/TextAppearance"/>


</RelativeLayout>
